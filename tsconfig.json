{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "lib": [
            "es6",
            "es2017",
            "dom"
        ],
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "noEmit": true,
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"],
}